.register
  .form_header
    .logo
      = link_to "#" do
        -# %img{ src: "logo.png", alt: "logo" }
  .register_content 
    .register_content__head
      %h2="新規会員登録"
    .register_content__main
      %button.btn-mail
        %i.far.fa-envelope
        = link_to '/jp/signup/registration' do
          ="メールアドレスで登録する"
      %button.btn-sns-facebook
        %i.fab.fa-facebook-square
        = link_to 'Facebookで登録する'
      %button.btn-sns-google
        %i.fab.fa-google-plus-g
        = link_to 'Googleで登録する'

  = render partial: "devise/shared/form_footer"
  
