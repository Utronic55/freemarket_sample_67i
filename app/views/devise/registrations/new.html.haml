.register_form
  .form_header
    .logo
      = link_to "/" do
        -# %img{ src: "logo.png", alt: "logo" }
  .register_form_content
    .register_form_content__head
      %h1="会員情報入力"
    .register_form_content__main
      .form-group
        = "ニックネーム"
        %span.form-repuire 必須
        %br
        %input{:nickname => "title", :size => "40", placeholder: "例) フリマ", class: "input-default", autofocus: true }
      .form-group
        ="メールアドレス"
        %span.form-repuire 必須
        %br
        %input{:address => "title", :size => "40", placeholder: "PC・携帯どちらでも可", class: "input-default", autofocus: true }
      .form-group
        ="パスワード"
        %span.form-repuire 必須
        %br
        %input{:password => "title", :size => "40", placeholder: "7文字以上の半角英数字", class: "input-default", autofocus: true }
          %h3.alert="※ 英字と数字の両方を含めて設定してください"
          %input{:name => "Checkbox", :type => "checkbox"}
          パスワードを表示する
      .form-group
      %label 本人確認
      %p="安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。"
      %p="他のお客さまに公開されることはありません。"
      %br
      %br
      .form-group
        ="姓(全角)"
        %span.form-repuire 必須
        %br
        %input{:first_name => "title", :size => "40", placeholder: "例) 井口", class: "input-default", autofocus: true }
      .form-group
        ="名(全角)"
        %span.form-repuire 必須
        %br
        %input{:last_name => "title", :size => "40", placeholder: "例) 大輔", class: "input-default", autofocus: true }
      .form-group
        ="姓(カナ)"
        %span.form-repuire 必須
        %br
        %input{:first_name => "title", :size => "40", placeholder: "例) イグチ", class: "input-default", autofocus: true }
      .form-group
        ="名(カナ)"
        %span.form-repuire 必須
        %br
        %input{:last_name => "title", :size => "40", placeholder: "例) ダイスケ", class: "input-default", autofocus: true }
      .form-group
        ="生年月日"
        %span.form-repuire 必須
        .form_select
          %select :month
          月
        .form_select
          %select :year
          年
      .form-group
      %label 本人確認
      %p= "※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。"
      %br
      %p= "「次へ進む」のボタンを押すことにより、利用規約に同意したものとみなします。"
      %br
      .new_submit
        = link_to "/jp/signup/address", class: "recaptcha btn-default btn-red" do
          %label2
            = "次に進む"

  = render partial: "devise/shared/form_footer"
