.container
  = render partial: 'devise/shared/form_header'
  -# // 商品情報入力
  .main
    .item
      .item__content
        %h2
          商品の情報を入力
        = form_with model: @item, url: items_path, local: true, class: "item__data" do |f|
          -# // 商品情報入力(出品画像)
          .item__data--upload
            %h3
              出品画像
              %span
                必須
              %p 最大10枚までアップロードできます
            - 10.times do
              = f.fields_for :item_images, local: true do |i|
                %div
                  = i.file_field :image
                  = i.check_box :_destroy, id: 'check_box'
                  = i.hidden_field :id
                  %label{for: 'img-file', style: 'display:none;'}
                    %pre.visible-pc ドラッグアンドドロップまたはクリックしてファイルをアップロード
                      
          -# // 商品情報入力(商品名)
          .item__data--box
            .item__data--box--first
              = f.label :name do
                商品名
                %span 必須
              %div
                = f.text_field :name, placeholder: "商品名 (必須 40文字まで)", class: "input-default"
            .item__data--box--group
              = f.label :text do
                商品の説明
                %span 必須
              = f.text_area :text, placeholder: "商品の説明 (必須1000文字以内) (色、素材、重さ、定価、注意点など) 例)2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: "5", class: "textarea-default"
          -# // 商品情報入力(商品詳細)
          .item__data--box
            %H3.item__data--box--information
              商品の詳細
            .sell__form--box
              .item__data--box--first
                = f.label :category_id do
                  カテゴリー
                  %span.form-require
                    必須
                  .select-wrap
                    .select-default
                    = f.select :category_id, options_from_collection_for_select(@category_parent_array, :id, :name), {prompt: "---"}, class: "select-default", id: "category"
                  .select-wrap
                    .select-default
                    = f.select :category_id, options_from_collection_for_select(@category_child_array, :id, :name), {prompt: "---"}, class: "select-default", id: "category"
                  .select-wrap
                    .select-default
                    = f.select :category_id, options_from_collection_for_select(@category_grandchild_array, :id, :name), {prompt: "---"}, class: "select-default", id: "category"

                .item__data--box--group
                  = f.label :quality do
                    商品の状態
                    %span 必須
                  .item__data--box--group__form
                  = f.select :quality, ['---','新品、未使用','未使用に近い','目立った傷や汚れなし','傷や汚れあり','全体的に状態が悪い'],class: "select-default"

              -# // 商品情報入力(商品詳細)
          .item__data--box
            %H3.item__data--box--information
              配送について
            .sell__form--box
              .item__data--box--first
                = f.label :delivery_charge do
                  配送料の負担
                %span
                  必須
                .select-wrap
                = f.select :delivery_charge, ['---','送料込み','着払い'],class: "select-default"

              .item__data--box--group
                = f.label :area do
                  発送元の地域
                %span
                  必須
                .select-wrap
                = f.select :area, ['---','北海道','青森県','岩手県','宮城県','秋田県','山形県','福島県','茨城県','栃木県','群馬県','埼玉県','千葉県','東京都','神奈川県','新潟県','富山県','石川県','福井県','山梨県','長野県','岐阜県','静岡県','愛知県','三重県','滋賀県','京都府','大阪府','兵庫県','奈良県','和歌山県','鳥取県','島根県','岡山県','広島県','山口県','徳島県','香川県','愛媛県','高知県','福岡県','佐賀県','長崎県','熊本県','大分県','宮崎県','鹿児島県','沖縄県','未定'],class: "select-default"
              .sell__form--box
                .item__data--box--group
                  = f.label :delivery_date do
                    発送までの日数
                  %span
                    必須
                  .select-wrap
                  = f.select :delivery_date, ['---','1~2日で発送','2~3日で発送','4~7日で発送'],class: "select-default"
                     
          -# // 商品情報入力(販売価格)
          .item__data--box
            %H3.item__data--box--information
              販売価格(300〜9,999,999)
            .sell__form--box
              .sell__form--box--price
                %ul.l-left
                  %li.item__data--box--first
                    = label :price, "価格", {class: 'form-label'}
                    %span 必須
                .input-price
                  .l-left
                    ¥
                  .l-right
                    .input-price__input_box
                      = f.text_field :price, placeholder: "例)300", class: "input-price-area"
              .sell__form--box--commision
                .l-left
                  販売手数料 (10%)
                .l-right
                  −
              .sell__form--box--profits
                .l-left
                  販売利益
                .l-center
                  −
                .l-right
                  -

          .item__data--box
            %p
              禁止されている出品、行為を必ずご確認ください。</br>
              またブランド品でシリアルナンバー等がある場合はご記載ください。偽ブンドの販売は犯罪であり処罰される可能性があります。
            %button.item__data--box--btn{type: "submit"}
              .name
                出品する
            .item__data--box--formbtn
              = link_to "もどる", "/", class: "btn "

  = render partial: "devise/shared/form_footer"